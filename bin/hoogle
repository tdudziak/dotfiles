#!/usr/bin/env python

import webbrowser
from sys import argv, exit
from urllib import urlencode

def main():
    if len(argv) != 2:
        exit('Usage: %s <keyword>' % argv[0])

    url = 'http://haskell.org/hoogle?' + urlencode([('hoogle', argv[1])])
    webbrowser.open(url)

if __name__ == '__main__':
    main()
